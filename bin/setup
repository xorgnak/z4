#!/usr/bin/env bash
set -euo pipefail
IFS=$'\n\t'
set -vx

bundle install

mkdir -p views public db org templates

if [[ ! -f "env.sh" ]]; then
cat <<EOF > env.sh                                                                                                           
# get from discord app dashboard
export DISCORD_CLIENT_ID='';
export DISCORD_CLIENT_SECRET='';
export DISCORD_APPLICATION_ID='';
export DISCORD_TOKEN='';
export DISCORD_PERMISSIONS='';
EOF
editor env.sh
fi
